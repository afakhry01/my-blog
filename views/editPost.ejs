<% include partials/header %>
<% include partials/nav %>

<div class="container margins">
    <h2>Add a new post</h2>
    <form method="POST" action="/blog/<%= post._id %>?_method=PUT">
        
      <div class="form-group">
        <label for="exampleFormControlInput1">Post Title</label>
        <input type="text" name="blog[title]" class="form-control" id="exampleFormControlInput1" value="<%= post.title %>">
      </div>
        
      <div class="form-group">
        <label for="exampleFormControlInput1">Author Name</label>
        <input type="text" name="blog[author]" class="form-control" id="exampleFormControlInput1" value="<%= post.author %>">
      </div>
        
      <div class="form-group">
        <label for="exampleFormControlInput1">Image URL</label>
        <input type="text" name="blog[image]" class="form-control" id="exampleFormControlInput1" value="<%= post.image %>">
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Post Description</label>
        <textarea class="form-control" name="blog[description]" id="exampleFormControlTextarea1" rows="3"><%= post.description %></textarea>
      </div>
      <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Update">
      </div>
    </form>
</div>

<% include partials/footer %>