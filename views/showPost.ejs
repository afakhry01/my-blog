<% include partials/header %>
<% include partials/nav %>

<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 class="mt-4"><%= post.title %></h1>
      <!-- Author -->
      <p class="lead">
        by <%= post.author %>
      </p>
      <hr>
      <!-- Date/Time -->
      <p>Posted on <%= post.date %></p>
      <hr>
      <!-- Preview Image -->
      <img class="img-fluid rounded" src="<%= post.image %>" alt="">
      <hr>
      <!-- Post Content -->
      <p class="lead"><%= post.description %></p>
    </div>
  </div>
</div>

<% include partials/footer %>