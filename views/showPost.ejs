<% include partials/header %>
<% include partials/nav %>

<!-- Page Content -->
<div class="container margins">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 class="mt-4"><%= post.title %></h1>
      <!-- Author -->
      <p class="lead">
        by <%= post.author %>
      </p>
      <hr>
      <!-- Date/Time -->
      <p>Posted on <%= post.date.toDateString() %></p>
      <hr>
      <!-- Preview Image -->
      <img class="img-fluid rounded" src="<%= post.image %>" alt="">
      <hr>
      <!-- Post Content -->
      <p class="lead"><%= post.description %></p>
      <form method="POST" action="/blog/<%= post._id %>?_method=DELETE">
      <a class="btn btn-primary" href="/blog/<%= post._id%>/edit" role="button">Edit Post</a>
      <input class="btn btn-danger" type="submit" value="Delete Post"><br/><br/>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>